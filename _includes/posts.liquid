<ul class="c-block-list">

  {% for post in site.posts %}
    
    <li class="c-block-list__item">

      <div class="c-block">
				
        <h2 class="c-block__heading">
          
          <a href="{{site.baseurl}}{{post.url}}" class="c-block__link">{{post.title}}</a>
        
        </h2>
            	
        <div class="c-block__desc">
					
          {{post.content}}
				
        </div>
			
      </div>

    </li>
  
  {% endfor %}
	
</ul>