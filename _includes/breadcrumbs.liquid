{% if page.group %}

  <ol class="c-breadcrumbs">

    <li class="c-breadcrumbs__item">
      
      <a href="{{page.group | relative_url}}"
         class="c-breadcrumbs__link">
        {{page.group | replace: '-', ' ' | titleize}}
      </a>
      
    </li>

    {% if page.subgroup %}
      
      <li class="c-breadcrumbs__item">
        
        <a href="{{site.baseurl}}/{{page.group}}/{{page.subgroup}}" 
           class="c-breadcrumbs__link">
          {{page.subgroup | replace: '-', ' ' | titleize}}
        </a>
        
      </li>
    
    {% endif %}

  </ol>

{% endif %}
